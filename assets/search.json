---
permalink: search.json
---
{
  "docs": [
    {% comment %} Index docs pages {% endcomment %}
    {% for section in site.data.docs %}
      {% for item in section.docs %}
        {% assign item_url = item | prepend:"/docs/" | append:"/" %}
        {% assign p = site.docs | where:"url", item_url | first %}
        {
          "title": "{{ p.title | escape }}",
          "url": "{{ p.url | relative_url }}",
          "content": {{ p.content | strip_html | jsonify }}
        }{% unless forloop.last and forloop.parentloop.last %},{% endunless %}
      {% endfor %}
    {% endfor %}

    {% comment %} Index blog posts {% endcomment %}
    {% for post in site.posts %}
      {
        "title": "{{ post.title | escape }}",
        "url": "{{ post.url | relative_url }}",
        "content": {{ post.content | strip_html | jsonify }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
